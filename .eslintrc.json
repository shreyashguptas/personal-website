{
  "extends": "next/core-web-vitals",
  "rules": {
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [
          {
            "char": ">",
            "alternatives": ["&gt;"]
          },
          {
            "char": "}",
            "alternatives": ["&#125;"]
          }
        ]
      }
    ],
    "react/display-name": "off",
    "jsx-a11y/alt-text": "warn"
  }
}
